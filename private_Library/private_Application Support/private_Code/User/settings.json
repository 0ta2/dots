{
    // Layout
    "workbench.activityBar.location": "top",
    // Font
    "editor.fontFamily": "HackGen35",
    "terminal.integrated.fontFamily": "HackGen Console NF",
    // Github Copilot
    "github.copilot.nextEditSuggestions.enabled": true,
    // Editor
    "editor.minimap.enabled": false,
    // Files
    "files.autoSave": "onFocusChange",
    // Go
    "go.lintTool": "golangci-lint-v2",
    "go.lintFlags": [
        "--path-mode=abs",
        "--fast-only"
    ],
    "go.formatTool": "custom",
    "go.alternateTools": {
        "customFormatter":  "golangci-lint-v2"
    },
    "go.formatFlags": [
        "fmt",
        "--stdin"
    ],
    // Vim
    // OSのクリップボードと同期する
    "vim.useSystemClipboard": true,
    // Keymapの設定
    // ノーマルモードのキー割り当て
    "vim.normalModeKeyBindings": [
        // H/L で行頭・行末へ移動
        {
            "before": [
                "H"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "L"
            ],
            "after": [
                "$"
            ]
        },
        // j/k で表示行（折り返し考慮）移動
        {
            "before": [
                "j"
            ],
            "after": [
                "g",
                "j"
            ]
        },
        {
            "before": [
                "k"
            ],
            "after": [
                "g",
                "k"
            ]
        },
        // ; と: を入れ替える
        {
            "before": [
                ";"
            ],
            "after": [
                ":"
            ]
        },
        {
            "before": [
                ":"
            ],
            "commands": [
                "workbench.action.showCommands"
            ]
        },
        {
            "before": [
                "<C-p>"
            ],
            "commands": [
                "workbench.action.quickOpen"
            ]
        }
    ],
    // ビジュアルモードのキー割り当て
    "vim.visualModeKeyBindings": [
        // H/L で行頭・行末へ移動
        {
            "before": [
                "H"
            ],
            "after": [
                "^"
            ]
        },
        {
            "before": [
                "L"
            ],
            "after": [
                "$"
            ]
        },
        // j/k で表示行（折り返し考慮）移動
        {
            "before": [
                "j"
            ],
            "after": [
                "g",
                "j"
            ]
        },
        {
            "before": [
                "k"
            ],
            "after": [
                "g",
                "k"
            ]
        }
    ]
}
