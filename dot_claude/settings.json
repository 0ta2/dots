{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "language": "japanese",
    "permissions": {
        "allow": [],
        "deny": [
            "Read(./.env)",
            "Read(./.env.*)",
            "Read(./secrets/**)",
            "Bash(rm -rf:*)",
            "Bash(sudo:*)"
        ],
        "ask": [
            "Bash(git push:*)",
            "Bash(git merge:*)",
            "Bash(git rebase:*)",
            "Bash(curl:*)"
        ]
    }
}
