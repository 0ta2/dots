{
    "$schema": "https://json.schemastore.org/claude-code-settings.json",
    "language": "japanese",
    "permissions": {
        "allow": [],
        "deny": [
            "Read(./.env)",
            "Read(./.env.*)",
            "Read(./secrets/**)",
            "Bash(rm -rf:*)",
            "Bash(sudo:*)"
        ],
        "ask": [
            "Bash(git push:*)",
            "Bash(git merge:*)",
            "Bash(git rebase:*)",
            "Bash(curl:*)"
        ]
    },
    "hooks": {
        "Stop": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "terminal-notifier -title 'Claude Code' -message 'タスクが完了しました' -appIcon ~/.claude/claude-icon.png -sound Ping"
                    }
                ]
            }
        ],
        "Notification": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "terminal-notifier -title 'Claude Code' -message '入力待ちです' -appIcon ~/.claude/claude-icon.png -sound Ping"
                    }
                ]
            }
        ]
    }
}
